<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F3"
    tools:context=".ChatWithUsActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/activityBackNav">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/arrowBackSignUpImg"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#A9A9A9"
            android:text="@string/backText"
            android:layout_toRightOf="@id/arrowBackSignUpImg"
            android:layout_centerVertical="true"
            android:id="@+id/backTextSignUp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:layout_centerInParent="true"
        android:padding="15dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_centerHorizontal="true"
            android:layout_height="160dp"
            android:id="@+id/icon"
            android:src="@drawable/consultanticon"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Customer Support"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:layout_below="@id/icon"
            android:textStyle="bold"
            android:id="@+id/supportText"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Can have conversation with our Project Consultant Experts to solve your Doubts."
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:layout_below="@id/supportText"
            android:id="@+id/description"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/description"
            android:textColor="#FFF"
            android:text="Go to Chat"
            android:id="@+id/chatBtn"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:textAppearance="@style/Widget.AppCompat.Button.Small"
            android:textSize="14sp"/>
    </RelativeLayout>

</RelativeLayout>