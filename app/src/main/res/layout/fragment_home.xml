<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchBarLayout"
        layout="@layout/toolbar_and_search" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBarLayout">

        <!-- Parent for all views-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <com.synnapps.carouselview.CarouselView
               android:layout_width="match_parent"
               android:layout_height="175dp"
               app:slideInterval="3000"
               app:radius="6dp"
               app:fillColor="#FFFFFFFF"
               app:pageColor="#00000000"
               app:strokeColor="#FF777777"
               app:strokeWidth="1dp"
               android:id="@+id/carousel"/>

            <!-- CarouselBanner 1-->
            <ImageView
                android:id="@+id/homeCarouselBanner1"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:layout_below="@id/carousel"
                android:src="@drawable/dummycomponentimage" />
            <ImageView
                android:id="@+id/homeCarouselBanner2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/dummycomponentimage"
                android:layout_below="@id/homeCarouselBanner1"/>
            <ImageView
                android:id="@+id/homeCarouselBanner3"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/dummycomponentimage"
                android:layout_below="@id/homeCarouselBanner2"/>
            <ImageView
                android:id="@+id/homeCarouselBanner4"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/dummycomponentimage"
                android:layout_below="@id/homeCarouselBanner3"/>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>