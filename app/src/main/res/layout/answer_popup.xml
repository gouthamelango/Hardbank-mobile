<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:padding="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="500dp"
    android:background="@drawable/popupborder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support the Community ! "
        android:textSize="18sp"
        android:padding="5dp"
        android:fontFamily="@font/roboto"
        android:id="@+id/textViewText"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewText"
        android:id="@+id/answerEditTextLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:drawablePadding="20dp"
            android:paddingLeft="15dp"
            android:hint="Type here..."
            android:background="@drawable/edittext_border"
            android:id="@+id/answerEditText"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_below="@id/answerEditTextLayout"
        android:layout_centerHorizontal="true"
        android:text="Post"
        android:textAppearance="@style/Widget.AppCompat.Button.Small"
        android:textSize="14sp"
        android:id="@+id/answerPostBtn"
        android:textColor="#FFF"
        android:layout_marginTop="15dp"/>

</RelativeLayout>