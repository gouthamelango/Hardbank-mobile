<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F3"
    tools:context=".AskQuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:id="@+id/askQuestionActivityNavBar"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewProductNameNavBar"
            android:text="Ask Question"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/askQuestionMainContainer"
        android:layout_below="@+id/askQuestionActivityNavBar"
        android:layout_margin="20dp"

        android:background="@drawable/edittext_border"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask The Community !"
            android:id="@+id/askAQuestionText"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/askAQuestionText"
            android:layout_marginTop="15dp"
            android:hint="Type here..."
            android:padding="10dp"
            android:id="@+id/editTextQuestion"
            android:inputType="textMultiLine"
            android:background="#EFF1F3"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextQuestion"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="Post"
            android:textColor="#fff"
            android:id="@+id/postQuestionBtn"
            android:textAppearance="@style/Widget.AppCompat.Button.Small"
            android:textSize="14sp"
            />
    </RelativeLayout>

</RelativeLayout>